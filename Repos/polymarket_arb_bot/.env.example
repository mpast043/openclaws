# Runtime mode
BOT_MODE=scan

# Polling
SCAN_INTERVAL_SECONDS=45
MAX_EVENT_PAGES=3
EVENTS_PAGE_SIZE=100
TOP_N_OPPS=5

# Risk / sizing
CAPITAL_PER_TRADE_USDC=7000
MAX_SHARES_PER_TRADE=20000
MIN_EDGE_USDC_PER_SHARE=0.003
MIN_EDGE_TOTAL_USDC=5
MIN_SHARES=5
LATENCY_SLIPPAGE_BUFFER_PER_LEG=0.0015
OPS_COST_PER_BUNDLE=0
MAX_ACCEPTABLE_COMBINED_COST=0.999
DEPTH_LEVELS_LIMIT=25

# Universe / validation
SKIP_NEG_RISK=true
ONLY_SPORTS=true
SKIP_RED_FLAG_RULES=true

# Execution safety
EXECUTION_ENABLED=false
PRINT_BOOKS=true
HEDGE_ON_LEG_FAIL=true
HEDGE_PRICE_BUFFER=0.002
CSV_LOG_PATH=./trades.csv
BUNDLE_LOG_PATH=./bundles.csv

# Optional websocket quote cache
ENABLE_WEBSOCKET_QUOTES=false
WS_URL=wss://ws-subscriptions-clob.polymarket.com/ws/market
MAX_QUOTE_AGE_SECONDS=3

# Polymarket CLOB auth (required only for live mode)
POLY_HOST=https://clob.polymarket.com
POLY_CHAIN_ID=137
POLY_PRIVATE_KEY=
POLY_FUNDER=
POLY_SIGNATURE_TYPE=0
